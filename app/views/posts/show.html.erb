<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">

    <nav class="level">
      <div class="level-item">
         <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class: "button" %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "This will delete the list. Press ok to continue." }, class: "button is-light" %>
        </p>

      </div>
    </nav>

    <hr />

    <h1 class="title">
      <%= @post.title %>
    </h1>

    <div class="content">
      <%= @post.content %>
    </div>
  </div>
  <br>
  <br>
  <br>
</section>

<section class="comments">
  <br>
  <div class="container">
    <h2 class="subtitle is-5"><strong><%= @post.comments.count %> notes</strong></h2>
    <%= render @post.comments %>
    <div class="comment-form">
      <hr />
      <p class="subtitle">Leave a note</p>
      <%= render 'comments/form' %>

    </div>
  </div>

</section>
